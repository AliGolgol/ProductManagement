@model Repository.ViewModel.Entry.BuySlipViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/css/bootstrap-rtl.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/site/persian-num-js.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.replace-digits').replaceDigits();
        })
    </script>
</head>
<body class="col-md-6 container col-md-offset-3 replace-digits">
    <div> 
        <dl class="dl-horizontal">
           
            <dt>
                @Html.DisplayNameFor(model => model.Id)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreation)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreation)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DeliveryMan)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DeliveryMan)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayName("ردیف")

            </th>
            <th>
                @Html.DisplayName("نام کالا")
            </th>
            <th>
                @Html.DisplayName("توضیحات")
            </th>
            <th>
                @Html.DisplayName("تعداد")
            </th>
            <th>
                @Html.DisplayName("قیمت")
            </th>
            <th>
                @Html.DisplayName("")
            </th>
        </tr>
        @{int rowNo = 0;}
        @foreach (var item in Model.BuySlipItems)
        {
            <tr>
                <td>
                    <span>@(rowNo += 1)</span>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceInQuantity)
                </td>
            </tr>
        }
        @if (Model.BuySlipItems.Count < 10)
        {
            for (int i = 1; i < (10 - Model.BuySlipItems.Count); i++)
            {
                <tr>
                    <td>
                        <span>@(rowNo += 1)</span>

                    </td>
                    <td>
                       
                    </td>
                    <td>
                       
                    </td>
                    <td>
                        
                    </td>
                    <td>
                      
                    </td>
                    <td>
                      
                    </td>
                </tr>
            }
        }
        <tr>
            <td colspan="5">جمع کل</td>
            <td>
                @Html.DisplayFor(model => model.TotalPrice)
            </td>
        </tr>
    </table>
    <div class="">

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.AboutFotter.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AboutFotter.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AboutFotter.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AboutFotter.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AboutFotter.Tel)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AboutFotter.Tel)
            </dd>

        </dl>
    </div>
</body>
</html>
