@model IEnumerable<Repository.DomainModel.Repository.Repository>

@{
    var grid = new WebGrid(source: Model);
}


<div id="myModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>

    </div>
</div>

<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">
        <a class="btn btn-success" data-modal="" href="/Repositories/Create" id="btnCreate">
            <span class="glyphicon glyphicon-plus"></span>
        </a>

    </div>
    <div class="panel-body">
        <p>...</p>
        @grid.GetHtml(tableStyle: "table table-hover table-bordered table-striped",
    columns: grid.Columns(
        grid.Column(columnName: "Id", header: "شناسه"),
        grid.Column(columnName: "Code", header: "کد انبار"),
        grid.Column(columnName: "RepositoryType.Name", header: "نوع انبار"),
        grid.Column(columnName: "Name", header: "نام انبار"),
        grid.Column(header: "عملیات", format: @<text>
            @Html.Raw("<a data-modal='' href='/Repositories/Details/" + item.Id + "' id='" + item.Id + "' title='جزئیات'> <span class='glyphicon glyphicon-search'> </span> </a>")
            @Html.Raw("<a data-modal='' href='/Repositories/Edit/" + item.Id + "' id='" + item.Id + "' title='ویرایش'> <span class='glyphicon glyphicon-edit'> </span> </a>")
            @Html.Raw("<a data-modal='' href='/Repositories/Delete/" + item.Id + "' id='" + item.Id + "' title='حذف'> <span class='glyphicon glyphicon-trash'> </span> </a>")
        </text>)))
    </div>
    <!-- Table -->
    <div class="panel-footer"></div>
</div>
<script src="~/Scripts/site/bootstrap-ajax-modal.js"></script>