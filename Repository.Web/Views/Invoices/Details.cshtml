@model Repository.ViewModel.Order.InvoiceViewModel

<div class="panel panel-info">

    <div class="panel-heading">
        صورت فاکتور/حواله
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("نحوه پرداخت")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PaymentTypeName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Reciver)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reciver)
            </dd>

        </dl>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("تاریخ ثبت")
                </th>
                <th>
                    @Html.DisplayName("نام کالا")
                </th>
                <th>
                    @Html.DisplayName("توضیحات")
                </th>
                <th>
                    @Html.DisplayName("تعداد")
                </th>
                <th>
                    @Html.DisplayName("قیمت")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.InvoiceItems)
            {
                <tr>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                </tr>
            }

        </table>
    </div>
    <div class="panel-footer panel-info">
        <div id="progress" style="display: none" class="container">
            <img src="@Url.Content("~/Content/web/flat/loading-image.gif")" alt="در حال بار گذاری ..." />
        </div>
        <button class="btn btn-warning" data-dismiss="modal">بستن</button>

    </div>
</div>
