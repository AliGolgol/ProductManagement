@model IEnumerable<Repository.DomainModel.Catalog.Product>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("ایجاد", "Create", null, new { @class = "btn btn-primary btn-lg btn-block " })
</p>

<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">

    </div>
    <div class="panel-body">
        <p>...</p>
        <table class="table table-hover table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCategory.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuantityPerUnit)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantityPerUnit)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning  " }) |
                        @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-default  " }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger  " })
                    </td>
                </tr>
            }

        </table>
    </div>
    <!-- Table -->

</div>
