@model Repository.ViewModel.Order.StockItemViewModel

@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">جزئیات</div>
    <div class="panel-body">
        <p>...</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Stocks.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Stocks.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Stocks.CreatedDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Stocks.CreatedDate)
            </dd>

        </dl>
        <br/>
        <hr />
        <table class="table table-hover table-bordered table-striped">
            <tr>
                <th>ردیف</th>
                <th>
                    @Html.DisplayName("نام کالا")
                </th>
                <th>
                    @Html.DisplayName("قیمت")
                </th>

                <th>
                    @Html.DisplayName("تعداد ")
                </th>

                <th>@{int rowNo = 0;}</th>
            </tr>

            @foreach (var item in Model.StockItems)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>

                    <td>
                        @Html.ActionLink("ویرایش", "Edit", "StockItems", new { id = item.Id }, new { @class = "btn btn-warning  " }) |
                        @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-default  " }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger  " })
                    </td>
                </tr>
            }

        </table>
    </div>

    <!-- Table -->
    <div class="panel-footer">
        <div class="container">
           @* @Html.ActionLink("ویرایش", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning col-md-3" })*@
            @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-default  col-md-3" })
        </div>
    </div>
</div>